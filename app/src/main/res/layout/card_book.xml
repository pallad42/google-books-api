<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/card_book_image"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_book" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_book_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Lord of the Rings: The Fellowship of the Ring"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/card_book_authors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="J.R.R. Tolkien" />

                <TextView
                    android:id="@+id/card_book_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-book" />

                <TextView
                    android:id="@+id/card_book_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="42,16 PLN" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>